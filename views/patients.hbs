{{> header }}
<p>Existing and Past Patients of ER Hospital</p>

<form id="add-patient-form" method="POST" action="/add-patient-form">
    <fieldset>
        <legend>Add a Patient</legend>
        <label for="firstName">First Name</label>
        <input type="text" id="firstName" name="firstName">
        <label for="lastName">Last Name</label>
        <input type="text" id="lastName" name="lastName">
        <label for="birthdate">Birthdate</label>
        <input type="date" id="birthdate" name="birthdate">
        <label for="isAdmitted">Is admitted to hospital</label>
        <input type="checkbox" id="isAdmitted" name="isAdmitted">

        <label for="doctorID">Doctor ID</label>
        <select name="doctorID" id="doctorID">
            <option value="">Select a Doctor</option>
                {{#each docs}}
            <option value="{{this.doctorID}}">{{this.firstName}} {{this.lastName}}</option>
                {{/each}}
        </select>

        <input type="submit">
    </fieldset>
</form>

<h2>Patients</h2>
            <!-- Search bar to search patient by name or DOB -->
            <input type="text" id="patientInput" onkeyup="searchFunction()" placeholder="Search by name or DOB" title="Type in a name">   
{{!-- The Data from our Database --}}

{{!-- Create a table --}}
<table id="Patients">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            {{>edit_delete_col_header}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.patientID}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.birthdate}}</td>
            <td>{{this.isAdmitted}}</td>
            <td>{{this.doctorID}}</td>
            <td><button>Delete</button></td>
            <td><a>Update</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

